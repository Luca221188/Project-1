<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
>
<androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".InstructionScreen">

    <TextView
            android:text="@string/instruction_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="128dp"
            app:layout_constraintHorizontal_bias="0.491"/>
    <TextView
            android:text="@string/instruction_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/textView4"
            android:layout_marginTop="96dp" app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <Button
            android:text="@string/welcome_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/instruction_btn"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            android:fontFamily="@font/bitter"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>